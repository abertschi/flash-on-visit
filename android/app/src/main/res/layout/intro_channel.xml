<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textAlignment="center"

        android:text="CHOOSE A CHANNEL"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/choose_channel_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@mipmap/ic_group_white_48dp"/>

    <ch.abertschi.flashonvisit.view.TypewriterView
        android:id="@+id/tagline_typewriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_channel_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="30dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:windowSoftInputMode="stateHidden"/>

</RelativeLayout>