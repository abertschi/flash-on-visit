<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:fillViewport="true">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/logo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="7dp"
                app:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5F0F40"
                    >

                    <TextView
                        android:id="@+id/dots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="top|right"
                        android:layout_marginRight="20dp"
                        android:text="..."
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"
                        android:textStyle="bold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">


                        <ImageView
                            android:id="@+id/img_wireless"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@mipmap/logo"/>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img_wireless"
                            android:layout_centerHorizontal="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp">

                                <com.wang.avi.AVLoadingIndicatorView
                                    android:id="@+id/connection_logo_loading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_centerVertical="true"
                                    android:alpha="0"
                                    android:visibility="gone"
                                    app:indicatorName="LineScaleIndicator"
                                    />


                                <ImageView
                                    android:id="@+id/connection_logo_connected"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:alpha="0"
                                    android:src="@mipmap/connected"
                                    android:visibility="gone"/>


                                <ImageView
                                    android:id="@+id/connection_logo_disconnected"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentLeft="true"
                                    android:alpha="0"
                                    android:src="@mipmap/not_connected"
                                    android:visibility="gone"/>

                            </LinearLayout>

                            <com.andexert.library.RippleView
                                android:id="@+id/enableButtonWrapper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="right">

                                <Button
                                    android:id="@+id/button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#321325"
                                    android:text="START"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp"
                                    android:textStyle="normal">

                                    <requestFocus/>
                                </Button>
                            </com.andexert.library.RippleView>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo_card"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="10dp"
                    android:text="Settings"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/settings_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/server_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:gravity="top|left"
                            android:text="Server and Channel"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <LinearLayout
                            android:id="@+id/serverTextEditGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/server_title"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_developer_board_black_24dp"
                                    />

                                <EditText
                                    android:id="@+id/serveradress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/server_title"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:hint="Server adress"
                                    android:maxLines="1"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/address_validation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/serverTextEditGroup"
                                android:layout_marginLeft="30dp"
                                android:paddingLeft="10dp"
                                android:text="Server not available"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#5F0F40"
                                android:textStyle="italic"
                                android:visibility="gone"
                                />


                            <LinearLayout
                                android:id="@+id/channelTextEditContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/address_validation"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/ic_group_black_24dp"
                                    />


                                <EditText
                                    android:id="@+id/channel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_marginLeft="8dp"
                                    android:hint="Channel"
                                    android:maxLines="1"
                                    android:singleLine="true"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/channel_validation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/channelTextEditContainer"
                                android:layout_marginLeft="30dp"
                                android:paddingLeft="10dp"
                                android:text="No valid channel"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#5F0F40"
                                android:textStyle="italic"
                                android:visibility="gone"
                                />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="10dp"
                    android:text="Feedback channel"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/feedback_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:id="@+id/choose_service_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:gravity="top|left"
                            android:text="Choose feedback channels"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                        <!--<TextView-->
                        <!--android:id="@+id/choose_service_text"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Choose feedback type"-->
                        <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                        <!--android:textColor="@android:color/black"/>-->

                        <LinearLayout
                            android:id="@+id/choose_feedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/choose_service_text"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                >


                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    >

                                    <Button
                                        android:id="@+id/led_feedback"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#321325"
                                        android:text="LED"
                                        android:textColor="@android:color/white"
                                        android:textSize="16dp"
                                        android:textStyle="normal"/>
                                </com.andexert.library.RippleView>


                                <View
                                    android:id="@+id/feedback_channel_selection_led"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2dip"
                                    android:layout_marginTop="2dp"
                                    android:background="#5F0F40"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:orientation="vertical"
                                >

                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                    <Button
                                        android:id="@+id/flash_feedback"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#321325"
                                        android:text="FLASH"
                                        android:textColor="@android:color/white"
                                        android:textSize="16dp"
                                        android:textStyle="normal"/>
                                </com.andexert.library.RippleView>


                                <View
                                    android:id="@+id/feedback_channel_selection_flash"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2dip"
                                    android:layout_marginTop="2dp"
                                    android:background="#5F0F40"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"

                                >


                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    >

                                    <Button
                                        android:id="@+id/vibra_feedback"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="#321325"
                                        android:text="VIBRA"
                                        android:textColor="@android:color/white"
                                        android:textSize="16dp"
                                        android:textStyle="normal"/>
                                </com.andexert.library.RippleView>

                                <View
                                    android:id="@+id/feedback_channel_selection_vibra"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2dip"
                                    android:layout_marginTop="2dp"
                                    android:background="#5F0F40"/>


                            </LinearLayout>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/feedback_channel_validation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/choose_feedback"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="1dp"
                            android:paddingLeft="0dp"
                            android:text="No feedback channel selected"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#5F0F40"
                            android:textStyle="italic"
                            android:visibility="visible"
                            />


                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="10dp"
                    android:text="Feedback settings"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/led_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingBottom="15dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp">

                        <!--<TextView-->
                        <!--android:id="@+id/led_preferences"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->

                        <!--android:gravity="top|left"-->
                        <!--android:text="LED"-->
                        <!--android:textAppearance="?android:attr/textAppearanceSmall"/>-->


                        <FrameLayout
                            android:id="@+id/tryout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <TextView
                                android:id="@+id/tryOutText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|top"
                                android:text="Give it a shot"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center"
                                android:layout_marginTop="10dp"
                                android:text="Show example feedback"
                                android:textAppearance="?android:attr/textAppearanceSmall"/>


                            <com.andexert.library.RippleView
                                android:id="@+id/tryoutButtonWrapper"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="right|center_vertical">

                                <Button
                                    android:id="@+id/tryoutButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#321325"
                                    android:text="TRY"
                                    android:textColor="@android:color/white"
                                    android:textSize="16dp"
                                    android:textStyle="normal"/>
                            </com.andexert.library.RippleView>

                        </FrameLayout>

                        <View
                            android:id="@+id/sep2"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_below="@id/tryout"
                            android:layout_marginTop="10dp"
                            android:background="#11000000"/>


                        <LinearLayout
                            android:id="@+id/led_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sep2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/lightbulp"
                                android:layout_width="35dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_marginLeft="0dp"
                                android:backgroundTintMode="add"
                                android:src="@mipmap/lightbulb"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:text="Some devices only flash the notification light if the screen is off."
                                android:textAppearance="?android:attr/textAppearanceSmall"/>


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/advanced_options_led"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/led_hint"
                            android:visibility="gone">


                            <View
                                android:id="@+id/sep6"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_marginTop="10dp"
                                android:background="#11000000"/>


                            <FrameLayout
                                android:id="@+id/choose_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sep6"
                                android:layout_marginTop="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|top"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Choose "
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/black"/>

                                    <TextView
                                        android:id="@+id/led_color_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="color"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/holo_red_dark"/>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/choose_color_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|bottom"
                                    android:layout_marginTop="25dp"
                                    android:text="Availability is device dependent"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                            </FrameLayout>

                            <LinearLayout
                                android:id="@+id/led_choose"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/choose_color"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.FloatingActionButton
                                        android:id="@+id/led_red"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        app:backgroundTint="@android:color/holo_red_dark"
                                        />

                                </com.andexert.library.RippleView>


                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.FloatingActionButton
                                        android:id="@+id/led_blue"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        app:backgroundTint="@android:color/holo_blue_dark"
                                        />

                                </com.andexert.library.RippleView>

                                <com.andexert.library.RippleView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <android.support.design.widget.FloatingActionButton
                                        android:id="@+id/led_green"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        app:backgroundTint="@android:color/holo_green_dark"
                                        />

                                </com.andexert.library.RippleView>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/led_root_options"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/led_choose">

                                <View
                                    android:id="@+id/sep5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dip"
                                    android:layout_marginTop="10dp"
                                    android:background="#11000000"/>

                                <FrameLayout
                                    android:id="@+id/kernel_hack"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_below="@id/sep5"
                                    android:layout_marginTop="15dp">

                                    <TextView
                                        android:id="@+id/textView422"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left|top"
                                        android:text="LED hack (root)"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@android:color/black"/>

                                    <TextView
                                        android:id="@+id/textView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_below="@+id/textView422"
                                        android:layout_gravity="left|center_vertical"
                                        android:layout_marginTop="10dp"
                                        android:text="Use kernel LED trigger"
                                        android:textAppearance="?android:attr/textAppearanceSmall"/>

                                    <Switch
                                        android:id="@+id/led_kernel_hack"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_gravity="right|center_vertical"
                                        android:checked="false"/>


                                </FrameLayout>
                            </RelativeLayout>
                        </RelativeLayout>


                        <View
                            android:id="@+id/sep3"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_below="@id/advanced_options_led"
                            android:layout_marginTop="10dp"
                            android:background="#11000000"/>


                        <TextView
                            android:id="@+id/button_show_advanced_led"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/sep3"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="13dp"
                            android:gravity="right"
                            android:text="ADVANCED"
                            android:textColor="#5F0F40"
                            android:textSize="16dp"
                            android:textStyle="bold"/>


                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="10dp"
                    android:text="History"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/black"/>


                <android.support.v7.widget.CardView
                    android:id="@+id/history_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    app:cardCornerRadius="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentTop="true"
                            android:background="@color/colorAccent"
                            android:text="..."/>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:paddingBottom="15dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="20dp">

                            <RelativeLayout
                                android:id="@+id/history_recycleview_container"
                                android:layout_width="match_parent"
                                android:layout_height="150dp">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/history_recycleview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="0dp"
                                    android:orientation="vertical"
                                    android:padding="0dp"
                                    android:scrollbars="none"
                                    />


                            </RelativeLayout>

                            <View
                                android:id="@+id/sep4"
                                android:layout_width="fill_parent"
                                android:layout_height="1dip"
                                android:layout_below="@id/history_recycleview_container"
                                android:layout_marginTop="10dp"
                                android:background="#11000000"/>


                            <LinearLayout
                                android:id="@+id/history_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/sep4"
                                android:layout_marginTop="13dp"
                                android:gravity="right"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/clearHistoryButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="40dp"
                                    android:text="CLEAR"
                                    android:textColor="#5F0F40"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:id="@+id/moreHistoryButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="MORE"
                                    android:textColor="#5F0F40"
                                    android:textSize="16dp"
                                    android:textStyle="bold"/>
                            </LinearLayout>


                        </RelativeLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"></View>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
